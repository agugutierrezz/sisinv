<div data-controller="catalog-modal">
  <dialog class="card" data-catalog-modal-target="brandDialog">
    <h3 data-catalog-modal-target="brandTitle">Nueva marca</h3>
    <form data-action="submit->catalog-modal#saveBrand" style="display:grid;gap:10px;">
      <input type="hidden" data-catalog-modal-target="brandId">
      <label class="required">Nombre</label>
      <input type="text" class="input" required data-catalog-modal-target="brandName">
      <div class="form-actions">
        <button type="button" class="btn" data-action="catalog-modal#closeBrand">Cancelar</button>
        <button class="btn btn-primary">Guardar</button>
      </div>
    </form>
  </dialog>

  <dialog class="card" data-catalog-modal-target="modelDialog">
    <h3 data-catalog-modal-target="modelTitle">Nuevo modelo</h3>
    <form data-action="submit->catalog-modal#saveModel" style="display:grid;gap:10px;">
      <input type="hidden" data-catalog-modal-target="modelId">
      <label class="required">Marca</label>
      <select class="select" required data-catalog-modal-target="modelBrand"></select>

      <label class="required">Nombre</label>
      <input type="text" class="input" required data-catalog-modal-target="modelName">

      <label>AÃ±o</label>
      <input type="number" min="1980" max="2100" class="input" data-catalog-modal-target="modelYear">

      <div class="form-actions">
        <button type="button" class="btn" data-action="catalog-modal#closeModel">Cancelar</button>
        <button class="btn btn-primary">Guardar</button>
      </div>
    </form>
  </dialog>
</div>